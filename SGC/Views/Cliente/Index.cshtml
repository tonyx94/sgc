@model List<SGC.Business.Dtos.ClienteDTO>

@{
    ViewData["Title"] = "Administración de Clientes";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-light mb-0">@ViewData["Title"]</h2>
            <p class="text-muted small">Gestión de la base de datos de clientes</p>
        </div>
        <a asp-action="Create" class="btn btn-dark btn-sm px-4 rounded-pill shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nuevo Cliente
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 fw-semibold border-0">Identificación</th>
                        <th class="py-3 fw-semibold border-0">Cliente</th>
                        <th class="py-3 fw-semibold border-0">Contacto</th>
                        <th class="py-3 fw-semibold border-0">Estado</th>
                        <th class="py-3 fw-semibold border-0">Registro</th>
                        <th class="pe-4 py-3 text-end fw-semibold border-0">Acciones</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium text-secondary">@cliente.Identificacion</td>
                                <td>
                                    <span class="fw-medium text-dark">@cliente.NombreCompleto</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="text-dark small">@cliente.Email</span>
                                        <span class="text-muted small" style="font-size: 0.75rem;">@cliente.Telefono</span>
                                    </div>
                                </td>
                                <td>
                                    @if (cliente.Activo)
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success fw-normal px-3 py-2">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger fw-normal px-3 py-2">Inactivo</span>
                                    }
                                </td>
                                <td class="text-muted small">@cliente.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@cliente.Id" 
                                           class="btn btn-outline-dark btn-sm rounded-pill px-3 me-1" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@cliente.Id" 
                                           class="btn btn-outline-danger btn-sm rounded-pill px-3" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <p class="text-muted mb-0">No hay clientes registrados</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Menu" class="btn btn-link text-decoration-none text-muted p-0">
            <i class="bi bi-arrow-left me-1"></i> Volver al Menú
        </a>
    </div>
</div>