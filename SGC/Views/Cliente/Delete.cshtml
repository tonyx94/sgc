@model SGC.Business.Dtos.ClienteDTO

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>¿Está seguro que desea eliminar este cliente?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Identificación:</strong>
                            <p>@Model.Identificacion</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Nombre Completo:</strong>
                            <p>@Model.NombreCompleto</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p>@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Teléfono:</strong>
                            <p>@Model.Telefono</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>Dirección:</strong>
                            <p>@Model.Direccion</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            <p>
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Registro:</strong>
                            <p>@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}