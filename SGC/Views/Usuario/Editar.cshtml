@model SGC.Business.Dtos.UsuarioDTO

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="mb-4">
        <h2 class="fw-light mb-0">Editar Usuario</h2>
        <p class="text-muted small">Modifique la información del usuario</p>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
            <form method="post" id="formEditarUsuario">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-semibold">Nombre de Usuario</label>
                        <input asp-for="Username" class="form-control border-0 bg-light" placeholder="Ingrese el nombre de usuario" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-semibold">Contraseña (opcional)</label>
                        <input asp-for="Password" type="password" class="form-control border-0 bg-light" placeholder="Dejar vacío para mantener la actual" />
                        <small class="text-muted d-block mt-1">Si no desea cambiar la contraseña, deje este campo vacío.</small>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label small text-muted fw-semibold">Rol del Usuario</label>
                        <select asp-for="Rol" class="form-select border-0 bg-light">
                            <option value="Administrador">Administrador</option>
                            <option value="ServicioCliente">Servicio Cliente</option>
                            <option value="Analista">Analista</option>
                            <option value="Gestor">Gestor</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-dark rounded-pill px-4">
                        <i class="bi bi-check-lg me-1"></i> Guardar Cambios
                    </button>
                    <a href="/Usuario" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-x-lg me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('formEditarUsuario').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                return;
            }
            
            e.preventDefault();
            
            Swal.fire({
                title: 'Guardando Cambios...',
                text: 'Por favor espere',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            this.submit();
        });
    </script>
}
