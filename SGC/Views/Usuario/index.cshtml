@model List<SGC.Business.Dtos.UsuarioDTO>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-light mb-0">Administración de Usuarios</h2>
            <p class="text-muted small">Gestión de usuarios del sistema</p>
        </div>
        <a href="/Usuario/Crear" class="btn btn-dark btn-sm px-4 rounded-pill shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 fw-semibold border-0"># ID</th>
                        <th class="py-3 fw-semibold border-0">Usuario</th>
                        <th class="py-3 fw-semibold border-0">Rol</th>
                        <th class="pe-4 py-3 text-end fw-semibold border-0">Acciones</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-medium text-secondary">#@u.Id</td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-medium text-dark">@u.Username</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill fw-normal px-3 py-2 @ObtenerClaseRol(u.Rol)">
                                    @u.Rol
                                </span>
                            </td>
                            <td class="pe-4 text-end">
                                <a class="btn btn-outline-dark btn-sm rounded-pill px-3 me-1" href="/Usuario/Editar/@u.Id">
                                    <i class="bi bi-pencil me-1"></i> Editar
                                </a>
                                <button class="btn btn-outline-danger btn-sm rounded-pill px-3" onclick="confirmarEliminar(@u.Id, '@u.Username')">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted mb-0">No se encontraron usuarios.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminar(id, username) {
            Swal.fire({
                title: '¿Eliminar Usuario?',
                text: `¿Está seguro que desea eliminar al usuario "${username}"? Esta acción no se puede deshacer.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Usuario/Borrar/' + id;
                }
            });
        }
    </script>
}

@functions {
    string ObtenerClaseRol(string rol) {
        return rol switch {
            "Administrador" => "bg-danger",
            "ServicioCliente" => "bg-primary",
            "Analista" => "bg-info",
            "Gestor" => "bg-success",
            _ => "bg-secondary"
        };
    }
}
