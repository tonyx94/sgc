@model List<SGC.Business.Dtos.UsuarioDTO>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<h2 class="mb-3">Administración de Usuarios</h2>

<a href="/Usuario/Crear" class="btn btn-primary mb-3">Crear Usuario</a>

<table class="table table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Rol</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Username</td>
                <td>@u.Rol</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-warning" href="/Usuario/Editar/@u.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" href="/Usuario/Borrar/@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
